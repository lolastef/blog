.ui.labels
    - if paginate && num_pages > 1
        .ui.label
            #{page_number} / #{num_pages}

    - if paginate && prev_page
        = link_to 'previous', prev_page, :class => 'ui label blue'

    - if paginate && next_page
        = link_to 'next', next_page, :class => 'ui label blue'
